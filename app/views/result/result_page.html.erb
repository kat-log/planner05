<h1>結果ページ</h1>
<p>結果を表示</p>

<%= form_tag :result_result_page, method: :get do  %>
  <%= label_tag :keyword, 'キーワード検索' %>
  <%= text_field_tag 'keyword', params[:keyword] %>
  <%= submit_tag "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>画像</th>
    </tr>
  </thead>
  <tbody>
    <% if @items.present? %>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.name, "#{item.url}" %></td>
          <td align="right"><%= number_with_delimiter(item.price) %>円</td>
          <td><%= image_tag item['smallImageUrls'][0] %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


  <% @ranking_by_age.each do |ranking| %>
    <%= ranking.rank %>
    <%= image_tag ranking['mediumImageUrls'][0] %>
    <%= break if ranking.rank ==3 %>
  <% end %>
